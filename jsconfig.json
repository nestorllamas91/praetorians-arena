{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/menu/*": ["src/menu/*"],
      "@/shared/*": ["src/shared/*"],
      "@/utils/*": ["src/utils/*"],
      "@/data/*": ["public/assets/data/*"],
      "@/uploads/*": ["uploads/*"]
    }
  }
}
